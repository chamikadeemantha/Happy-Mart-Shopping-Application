<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>customer.Loginservlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
    <servlet>
    	<servlet-name>customerInsert</servlet-name>
    	<servlet-class>customer.CustomerInsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>customerInsert</servlet-name>
    	<url-pattern>/insert</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>updateCustomer</servlet-name>
		<servlet-class>customer.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateCustomer</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deleteCustomer</servlet-name>
		<servlet-class>customer.DeleteCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteCustomer</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
   <!-- card -->
   <servlet>
    	<servlet-name>cardInsert</servlet-name>
    	<servlet-class>carddetail.CardInsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>cardInsert</servlet-name>
    	<url-pattern>/CardInsert</url-pattern>
    </servlet-mapping>	    
     
	<servlet>
		<servlet-name>updateCard</servlet-name>
		<servlet-class>carddetail.UpdateCardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateCard</servlet-name>
		<url-pattern>/updateCard</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>deleteCard</servlet-name>
		<servlet-class>carddetail.DeleteCardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteCard</servlet-name>
		<url-pattern>/deleteCard</url-pattern>
	</servlet-mapping>
	<!-- product -->
	    <servlet>
    	<servlet-name>productInsert</servlet-name>
    	<servlet-class>product.productinsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>productInsert</servlet-name>
    	<url-pattern>/productInsert</url-pattern>
    </servlet-mapping>
    

	<servlet>
	<servlet-name>updateProduct</servlet-name>
		<servlet-class>product.updateProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateProduct</servlet-name>
		<url-pattern>/updateProduct</url-pattern>
	</servlet-mapping>
 	
	<servlet>
		<servlet-name>deleteProduct</servlet-name>
		<servlet-class>product.deleteProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteProduct</servlet-name>
		<url-pattern>/deleteProduct</url-pattern>
	</servlet-mapping>
	 		
</web-app>